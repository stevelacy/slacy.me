@require '../../css/requires/colors'
@require '../../css/requires/fonts'

.component.footer
  position: relative
  width: 100%
  background: dgrey
  text-align: center
  padding: 5vw
  display: flex
  justify-content: center
  align-items: center
  .text
    font-rafale()
    position: relative
    background: rgba(0, 190, 220, .3)
    transition: all .5s
    padding: 1vw
    color: blue
    margin: 2vw
    font-size: 4vw
    border: 0.7vw solid rgba(0,0,0,0)
    &:hover
      background: rgba(0, 0, 0, .5)
      color: lighten(blue, 20%)
      border: 0.7vw solid blue
  .copy
    position: absolute
    left: 25vw
    bottom: 10px
    width: 50vw
    height: 20px
    text-align: center
    color: blue
    text-align: center
@media all and (max-width: 800px)
  .component.footer
    flex-direction: column
    .text
      font-size: 8vw
      width: 90%
