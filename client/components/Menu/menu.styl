@import '../../css/imports/colors'
@import '../../css/imports/fonts'

@import 'nib'

.component.menu
  font-intro()
  fixed: top right bottom left
  height: 100vh
  width: 100vw
  background: rgba(255, 80, 80, 1)
  background: linear-gradient(to right, rgba(255, 80, 80, .95), rgba(255, 80, 80, 1));
  background: blue
  z-index: 9
  .items
    position: relative
    top: 50%
    transform: translateY(-50%)
    left: 10%
    width: 80%
    text-align: center
    li
      transition: all .5s ease
      margin: 25px auto
      width: 250px
      padding: 5px
      list-style: none
      font-size: 50px
      color: #fff
      font-weight: bold
      border-bottom: 5px solid rgba(0, 0, 0, 0)
      &:hover
        border-bottom: 5px solid rgba(0, 0, 0, .5)
