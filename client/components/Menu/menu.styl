@require '../../css/requires/colors'
@require '../../css/requires/fonts'

@require 'nib'

.component.menu
  font-body()
  animation: fade .3s
  fixed: top right bottom left
  height: 100vh
  width: 100vw
  background: rgba(255, 80, 80, 1)
  background: linear-gradient(to right, rgba(255, 80, 80, .95), rgba(255, 80, 80, 1))
  background: blue
  z-index: 9
  .items
    height: 100%
    display: flex
    justify-content: center
    align-items: center
    flex-direction: column
    text-align: center
    li
      transition: all .3s ease
      cursor: pointer
      margin: 25px auto
      list-style: none
      font-size: 50px
      color: #fff
      border-bottom: 5px solid rgba(0, 0, 0, 0)
      &:hover
        border-bottom: 5px solid rgba(0, 0, 0, .5)

@keyframes fade
  from
    opacity: 0
  to
    opacity: 1
