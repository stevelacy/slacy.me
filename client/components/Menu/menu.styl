@import 'nib'

.component.menu
  fixed: top right bottom left
  height: 100vh
  width: 100vw
  background: rgba(255, 80, 80, 1)
  background: linear-gradient(to right, rgba(255, 80, 80, .95), rgba(255, 80, 80, 1));
  z-index: 9
  .items
    position: absolute
    top: 40%
    left: 10%
    vertical-align: middle
    width: 80%
    height: 30%
    text-align: center
    li
      transition: all .5s ease
      margin: 5px auto
      width: 250px
      padding: 5px
      list-style: none
      font-size: 50px
      color: #fff
      font-weight: bold
      border-bottom: 5px solid rgba(0, 0, 0, 0)
      &:hover
        border-bottom: 5px solid rgba(0, 0, 0, .5)
