.component.topbox
  transition: all 0.3s ease
  width: 100%
  height: 100vh
  background: url(/images/headphones.jpg)
  background-size: cover
  background-position: center
  box-shadow 0 0 200px #000 inset
  z-index: -1
  img
    position: fixed
    top: 50%
    transform: translateY(-50%)
    width: 80vw
    margin-left: 10vw
