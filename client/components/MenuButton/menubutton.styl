@import 'nib'

.component.menubutton
  cursor: pointer
  fixed: top 10px right 10px
  transition: all .3s ease
  height: 60px
  width: 55px
  padding: 22px 10px
  border: none
  background: none
  outline: none
  opacity: .99
  z-index: 8
  .bar
    transition: all .3s ease
    relative
    width: 35px
    height: 2px
    background: #171717
    margin-bottom: 7px
  &.light
    .bar
      background: #fff
