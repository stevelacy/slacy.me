@require 'requires/reset'
@require 'requires/fonts'
@require 'requires/colors'

body
  font-family: 'HelveticaNeue-Light', 'Helvetica Neue Light', 'Helvetica Neue', Helvetica, Arial, 'Lucida Grande', sans-serif
  font-weight: 300
  font-smoothing: antialiased
  text-rendering: optimizeLegibility

img, div, button
  outline: none

.box
  width: 100%

div
  &.blue
    background: blue
  &.grey
    background: grey
    color: white
  &.dgrey
    background: dgrey
    color: white

a
  text-decoration: none

.content
  position: relative
  .box
    height: 100vh
    .left, .right
      width: 50%
      display: block
      float: left
      height: 100%
    &.half
      height: 50vh
  .statement
    width: 100%
    font-size: 15vw
  .align, .statement
    text-align: center
    position: relative
    top: 50%
    transform: translateY(-50%)

  .message
    font-size: 20px
    &.header
      margin: 20px 0 10px 0
      font-size: 30px

.highlight
  background: blue

::selection
  background: blue
